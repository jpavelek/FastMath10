<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.afte9.fastmath10.GameScreen">


    <TextView
        android:id="@+id/textView_Score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/default_empty_score"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar_time"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:max="100"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Score" />

    <TextView
        android:id="@+id/textView_test"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/default_empty_test"
        android:textAlignment="center"
        android:textSize="46sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar_time" />

    <ImageView
        android:id="@+id/imageView_l01"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView_l02"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@android:color/holo_blue_dark" />

    <ImageView
        android:id="@+id/imageView_l02"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView_l03"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@android:color/holo_blue_light" />

    <ImageView
        android:id="@+id/imageView_l03"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView_l04"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@android:color/holo_blue_bright" />

    <ImageView
        android:id="@+id/imageView_l04"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView_l05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@android:color/holo_green_light" />

    <ImageView
        android:id="@+id/imageView_l05"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView_l06"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@android:color/holo_green_dark" />

    <ImageView
        android:id="@+id/imageView_l06"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView_l07"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@android:color/holo_orange_light" />

    <ImageView
        android:id="@+id/imageView_l07"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView_l08"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@android:color/holo_orange_dark" />

    <ImageView
        android:id="@+id/imageView_l08"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView_l09"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@android:color/holo_red_light" />

    <ImageView
        android:id="@+id/imageView_l09"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/textView_l01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/level_01"
        app:layout_constraintLeft_toRightOf="@+id/imageView_l01"
        app:layout_constraintTop_toTopOf="@+id/imageView_l01"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView_l02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level_02"
        app:layout_constraintLeft_toRightOf="@+id/imageView_l02"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView_l02"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView_l03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/level_03"
        app:layout_constraintLeft_toRightOf="@+id/imageView_l03"
        app:layout_constraintTop_toTopOf="@+id/imageView_l03"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView_l04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/level_04"
        app:layout_constraintLeft_toRightOf="@+id/imageView_l04"
        app:layout_constraintTop_toTopOf="@+id/imageView_l04"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView_l05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/level_05"
        app:layout_constraintLeft_toRightOf="@+id/imageView_l05"
        app:layout_constraintTop_toTopOf="@+id/imageView_l05"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView_l06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/level_06"
        app:layout_constraintLeft_toRightOf="@+id/imageView_l06"
        app:layout_constraintTop_toTopOf="@+id/imageView_l06"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView_l07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/level_07"
        app:layout_constraintLeft_toRightOf="@+id/imageView_l07"
        app:layout_constraintTop_toTopOf="@+id/imageView_l07"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView_l08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/level_08"
        app:layout_constraintLeft_toRightOf="@+id/imageView_l08"
        app:layout_constraintTop_toTopOf="@+id/imageView_l08"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView_l09"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/level_09"
        app:layout_constraintLeft_toRightOf="@+id/imageView_l09"
        app:layout_constraintTop_toTopOf="@+id/imageView_l09"
        android:layout_marginStart="8dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_test"
        android:layout_marginTop="24dp" >


        <Button
            android:id="@+id/buttonChoiceOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:onClick="choiceButtonsClicked"
            android:text="@string/default_empty_answer"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonChoiceTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:onClick="choiceButtonsClicked"
            android:text="@string/default_empty_answer"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonChoiceThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:onClick="choiceButtonsClicked"
            android:text="@string/default_empty_answer"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
