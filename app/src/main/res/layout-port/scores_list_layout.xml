    <TextView
        android:id="@+id/textView_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="02" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Orgol Xolxoi" />
</LinearLayout>